<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.demo.mapper.BoardMapper">

<resultMap id="BoardMap" type="com.study.demo.Domain.Board">
<id column="id" property="id"/>
<result column="title" property="title"/>
<result column="content" property="content"/>
<result column="writer" property="writer"/>
<result column="created_date" property="createdDate"/>
<result column="modified_date" property="modifiedDate"/>
</resultMap>

<insert id="save" parameterType="com.study.demo.DTO.BoardRequest" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO board (title, content, writer, hit, created_date)  VALUES (#{title}, #{content}, #{writer}, 0, NOW()) 
</insert>

<select id="findById" parameterType="long" resultMap="BoardMap">
    SELECT id, title, content, writer, hit, created_date, modified_date
    FROM board
    WHERE id = #{id}

</select>

<update id="update" parameterType="com.study.demo.DTO.BoardRequest">
    UPDATE board
    SET title = #{title},
        content = #{content},
        modified_date = NOW()
    WHERE id = #{id}
</update>

<delete id="deleteById" parameterType="long">
    DELETE FROM board
    WHERE id = #{id}
</delete>

<sql id="searchConditions">
    <where>
        <if test="searchType != null and keyword != null and keyword != ''">
            <choose>
                <when test='searchType.equals("title")'>
                    title LIKE CONCAT('%', #{keyword}, '%')
                </when>
                <when test='searchType.equals("writer")'>
                    writer LIKE CONCAT('%', #{keyword}, '%')
                </when>
                <when test='searchType.equals("content")'>
                    content LIKE CONCAT('%', #{keyword}, '%')
                </when>
            </choose>
        </if>
    </where>
</sql>

<select id="findAll" resultMap="BoardMap">
    SELECT id, title, content, writer, hit, created_date, modified_date
    FROM board
    <include refid="searchConditions"></include>
    ORDER BY id DESC
    LIMIT #{pageSize} OFFSET #{offset}
</select>

<update id="updateHit" parameterType="long">
    UPDATE board
    SET hit = hit + 1
    WHERE id = #{id}
</update>

<select id="count" resultType="int">
    SELECT COUNT(*) FROM board
    <include refid="searchConditions"></include>
</select>

</mapper>